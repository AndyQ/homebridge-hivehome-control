{
  "compilerOptions": {
    "target": "ES2018", // ~node10
    "module": "esnext",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "ES2021.String"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}